<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.remus.androidudpmessaging" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".login_page"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Settings"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".setConnection"
            android:label="@string/title_activity_set_connection" >
        </activity>
        <activity
            android:name=".ChatWindow"
            android:label="@string/title_activity_chat_window" >
        </activity>
    </application>

</manifest>
